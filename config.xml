<widget xmlns     = "http://www.w3.org/ns/widgets"
        id        = "com.example.hello"
        version   = "2.0.0">
    <name>Hello World</name>

    <description>
        A sample Apache Cordova application on the cordova-cef platform.
    </description>

    <author href="http://cordova.io" email="dev@cordova.apache.org">
        Apache Cordova Team
    </author>

    

    <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="index.html" />
    <access origin="*"/>

    <!-- not yet implemented
    <preference name="Fullscreen" value="true" />
    -->
    <preference name="OffScreenRendering" value="false" />

    <feature name="Device">
        <param name="cef-package" value="Device" onload="true"/>
    </feature>
    <feature name="MyPlugin">
        <param name="cef-package" value="Plugin"/>
    </feature>
    
</widget>
